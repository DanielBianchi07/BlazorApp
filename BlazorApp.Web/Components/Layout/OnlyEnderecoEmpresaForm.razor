@inherits Editor<EnderecoEmpresa>

<div class="col-3">
        <label for="CEP" class="form-label">CEP</label>
        <InputText type="text" class="form-control" id="CEP" @bind-Value="Value!.CEP" />
        <ValidationMessage For="() => Value!.CEP" />
    </div>
    <div class="col-5">
        <label for="nomeRua" class="form-label">Rua</label>
        <InputText type="text" class="form-control" id="nomeRua" @bind-Value="Value!.NomeRua" />
        <ValidationMessage For="() => Value!.NomeRua" />
    </div>
    <div class="col-2">
        <label for="Numero" class="form-label">NÃºmero</label>
        <InputText type="text" class="form-control" id="Numero" @bind-Value="Value!.Numero" />
        <ValidationMessage For="() => Value!.Numero" />
    </div>
    <div class="col-4">
        <label for="Bairro" class="form-label">Bairro</label>
        <InputText type="text" class="form-control" id="Bairro" @bind-Value="Value!.Bairro" />
        <ValidationMessage For="() => Value!.Bairro" />
    </div>
    <div class="col-6">
        <label for="Complemento" class="form-label">Complemento</label>
        <InputText type="text" class="form-control" id="Complemento" @bind-Value="Value!.Complemento" />
        <ValidationMessage For="() => Value!.Complemento" />
    </div>
    <div class="col-md-5">
        <label for="Estado" class="form-label">Estado</label>
        <InputSelect id="Estado" class="form-select" @bind-Value="Value!.Estado">
        <ValidationMessage For="() => Value!.Estado" />
        @foreach (var estado in ConstantsCities.dicionario.Keys) 
        {
            <option value="@estado">@estado</option>
        }
        </InputSelect>
    </div>
    <div class="col-md-5">
        <label for="Cidade" class="form-label">Cidade</label>
        <InputSelect id="Cidade" class="form-select" @bind-Value="Value!.Cidade">
        <ValidationMessage For="() => Value!.Cidade" />
        @foreach (KeyValuePair<string, List<string>> item in ConstantsCities.dicionario)
        {
            @if (Value!.Estado == item.Key)
            {
                @foreach (var cidade in item.Value)
                {
                    <option value="@cidade">@cidade</option>
                }
            }
        }
        </InputSelect>
    </div>